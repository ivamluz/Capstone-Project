<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/image_viewer_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true"
                android:background="@color/black"
                android:fitsSystemWindows="true"
                android:orientation="vertical"
                tools:context="ivamluz.marvelshelf.ui.activities.ImageViewerActivity">

    <uk.co.senab.photoview.PhotoView
        android:id="@+id/photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/black_alpha_6"
        />

    <ProgressBar
        android:id="@+id/photo_loading"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:indeterminateTint="@color/colorAccent"
        android:visibility="gone"
        />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        android:foreground="?android:windowContentOverlay"
        app:popupTheme="@style/MarvelShelfTheme.Widget.Toolbar.Transparent"
        app:theme="@style/MarvelShelfTheme.Widget.Toolbar.Transparent"
        />

    <TextView
        android:id="@+id/label"
        style="@style/MarvelShelfTheme.TextView.MediaViewer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/activity_horizontal_margin"
        />

</RelativeLayout>