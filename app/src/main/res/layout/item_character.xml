<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/img_view_contact_photo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:src="@android:drawable/presence_away"/>

    <TextView
        android:id="@+id/txt_view_contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_view_contact_photo"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/img_view_contact_photo"
        android:layout_toRightOf="@+id/img_view_contact_photo"
        android:text="Jenny Li"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
        android:id="@+id/txt_view_contact_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_view_contact_name"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/img_view_contact_photo"
        android:layout_toRightOf="@+id/img_view_contact_photo"
        android:text="(123) 456-7890"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

</RelativeLayout>